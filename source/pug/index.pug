doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Mulih Real Estate
        link(rel="preconnect", href="https://fonts.googleapis.com")
        link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500&family=Nunito+Sans:wght@400;600&family=Poppins:wght@400;500;600;700&family=Rubik:wght@600&display=swap", rel="stylesheet")
        link(rel="stylesheet", href="./css/main.css")
    body
        header.page-header 
            .content-zone
                .page-header__wrapper
                    .logo
                        a(href='#')
                            img(src="./img/logo-mulih.svg", alt="Mulih Logotype")
                    nav.page-header__nav 
                        .main-menu 
                            ul.main-menu__list 
                                li.main-menu__item.main-menu__item--active 
                                    a.main-menu__link(href="#") Home
                                li.main-menu__item.main-menu__item--normal 
                                    a.main-menu__link(href="#") Property
                                li.main-menu__item.main-menu__item--normal
                                    a.main-menu__link(href="#") About
                                li.main-menu__item.main-menu__item--normal 
                                    a.main-menu__link(href="#") Service
                                li.main-menu__item.main-menu__item--normal 
                                    a.main-menu__link(href="#") Contact
                        .page-header__auth-controls
                            button.btn-secondary Sign In
                            button.btn-primary Login
        section.hero 
            .content-zone 
                .hero__wrapper
                    .hero__content
                        .tag Real estate
                        h1.hero__title Let's hunt for your dream residence
                        .hero__description 
                            p Explore our range of beautiful properties with the addition of separate accommodation suitable for you.
                    .search-form 
                        .search-form__tabs 
                            .search-form__tab.search-form__tab--active Buy
                            .search-form__tab.search-form__tab--normal Rent
                        form.search-form__buy
                        form.search-form__rent
        section.recomendations 
            .content-zone
                .recomendations__wrapper 
                    .section-header 
                        .section-header__content
                            .tag Discover
                            h2.section-header__title Best recomendation
                            .section-header__description 
                                p Discover our exclusive selection of the finest one-of-a-kind luxury properties architectural masterpieces.
                        a.section-header__read-more(href="#") Learn more
                    .recomendations__cards
                        .property-card
                            a.property-card__link-wrapper(href="#")
                                .property-card__photo 
                                    img(src="./img/property-1.jpg", alt="")
                                .property-card__main-content
                                    h3.property-card__title Perum griya asri
                                    p.property-card__location Bogor, Jawa Barat
                                .property-card__price-content 
                                    p.property-card__price $25,000
                                    p.property-card__area
                                        span.property-card__area-size 360m²
                                        span.property-card__area-type Living Area
                            button.btn-action Send inquiry
                        .property-card
                            a.property-card__link-wrapper(href="#")
                                .property-card__photo 
                                    img(src="./img/property-2.jpg", alt="")
                                .property-card__main-content
                                    h3.property-card__title Perum kencana asri
                                    p.property-card__location Bogor, Jawa Barat
                                .property-card__price-content 
                                    p.property-card__price $35,000
                                    p.property-card__area 
                                        span.property-card__area-size 360m²
                                        span.property-card__area-type Living Area
                            button.btn-action Send inquiry
                        .property-card
                            a.property-card__link-wrapper(href="#")
                                .property-card__photo 
                                    img(src="./img/property-3.jpg", alt="")
                                .property-card__main-content
                                    h3.property-card__title Perum rakjel elit
                                    p.property-card__location Bogor, Jawa Barat
                                .property-card__price-content 
                                    p.property-card__price $40,000
                                    p.property-card__area
                                        span.property-card__area-size 360m²
                                        span.property-card__area-type Living Area
                            button.btn-action Send inquiry
        section.features 
            .content-zone
                .features__wrapper  
                    .section-header 
                        .section-header__content
                            .tag Our advante
                            h2.section-header__title Giving you peace of&nbsp;mind
                    .features__grid 
                        .features__item
                            svg.features__item-icon
                                use(xlink:href="./icons/icons.svg#heart")
                            h3.features__item-title Comfortable
                            .features__item-description
                                p Enjoy lifestyle amenities designed to provide every homeowners modern comfort, a stone's throw away from schools, churches, and hospitals.
                        .features__item
                            svg.features__item-icon
                                use(xlink:href="./icons/icons.svg#shield")
                            h3.features__item-title Extra security
                            .features__item-description
                                p You can connect with potential tenants without having to share your phone number. We also require all users to register to validate their legitimacy.                            
                        .features__item
                            svg.features__item-icon
                                use(xlink:href="./icons/icons.svg#star")
                            h3.features__item-title Luxury
                            .features__item-description
                                p Find out how we provide the highest standard of professional property management to give you all the benefits of property.
                        .features__item
                            svg.features__item-icon
                                use(xlink:href="./icons/icons.svg#ticket")
                            h3.features__item-title Best price
                            .features__item-description
                                p Not sure what you should be charging for your property? Let us do the numbers for you—contact us today for a free rental appraisal on your home.
                        .features__item
                            svg.features__item-icon
                                use(xlink:href="./icons/icons.svg#location")
                            h3.features__item-title Strategic location
                            .features__item-description
                                p located in the city center close to the shopping center. Very good for areas surrounded by international education centers, start-up office centers.                            
                        .features__item
                            svg.features__item-icon
                                use(xlink:href="./icons/icons.svg#graph")
                            h3.features__item-title Efficient
                            .features__item-description
                                p Schedule visits to multiple properties at once in one day without having to call them one by one. Check everything and find the best properties for rent
        section.about 
            .content-zone
                .about__wrapper
                    .section-header 
                        .section-header__content
                            .tag About us
                            h2.section-header__title How much is your property worth now?
                            .section-header__description 
                                p We have built our reputation as true local area experts. We have gained more knowledge about buyer interests, our neighborhood and the market than any other brand because we live locally and work for local people.
                        a.btn-cta-link Learn more
                    .about__content
                        .about__rating-card 
                            p.about__rating-amount 4.8
                            ul.stars 
                                li.stars__item.stars__item--full
                                li.stars__item.stars__item--full
                                li.stars__item.stars__item--full
                                li.stars__item.stars__item--full
                                li.stars__item.stars__item--empty
                            p.about__trusted-caption Trusted on
                            p.about__reviews-count 500+ Reviews
                        .about__indicators-wrapper 
                            .about__indicator-item
                                p.about__indicator-value 250+
                                p.about__indicator-caption Property sale
                            .about__indicator-item
                                p.about__indicator-value 550+
                                p.about__indicator-caption Apartment Rent
                        .about__photo
                            img(src="./img/office-interior.jpg", alt="Office interior")
        section.feedback 
            .content-zone
                .feedback__wrapper 
                    .section-header 
                        .section-header__content
                            .tag Customer testimonial
                            h2.section-header__title People say about us?
                        a.section-header__read-more(href="#") Learn more
                    .feedback__grid 
                        .testimonial-card 
                            h3.testimonial-card__title It proved to be exactly the kind of home we wanted.
                            .testimonial-card__text
                                p We wish to express our thanks for your hard work in finding us a temporary home, which proved to be exactly what we wanted.
                            .testimonial-card__author 
                                .testimonial-card__avatar 
                                    img(src="./img/avatar-1.png", alt="Jaydon Aminoff")
                                .testimonial-card__author-content 
                                    p.testimonial-card__author-name Jaydon Aminoff
                                    p.testimonial-card__author-job UX Designer
                        .testimonial-card 
                            h3.testimonial-card__title Nobody knows Portland and the peninsula better than David.
                            .testimonial-card__text
                                p My wife and I had a dream of downsizing from our house in Cape Elizabeth into a small condo closer to where we work and play in Portland.
                            .testimonial-card__author 
                                .testimonial-card__avatar 
                                    img(src="./img/avatar-2.png", alt="Alfredo Donin")
                                .testimonial-card__author-content 
                                    p.testimonial-card__author-name Alfredo Donin
                                    p.testimonial-card__author-job UI Designer
                        .testimonial-card 
                            h3.testimonial-card__title He keeps his client's best interests in sharp focus
                            .testimonial-card__text
                                p After working with David to sell my home in 2013, I was convinced that he’s the only realtor I’ll ever need. Since then, I’ve bought two properties and sold one.
                            .testimonial-card__author 
                                .testimonial-card__avatar 
                                    img(src="./img/avatar-3.png", alt="Makenna Korsgaard")
                                .testimonial-card__author-content 
                                    p.testimonial-card__author-name Makenna Korsgaard
                                    p.testimonial-card__author-job UX Researcher
        footer.page-footer 
            .content-zone
                .page-footer__wrapper 
                    .page-footer__main-info
                        .logo   
                            a(href="#")
                                img(src="./img/logo-mulih.svg", alt="Mulih Logotype")
                        .page-footer__tagline We have built our reputation as true local area experts.
                        .page-footer__subscribe-form 
                            label.page-footer__subscribe-label(for="email") Newsletter
                            input.page-footer__mail-input(type="text" id="email", name="email" placeholder="input your email")
                            button.page-footer__btn-subscribe Send
                    .page-footer__menu-wrapper
                        .page-footer__menu 
                            h3.page-footer__column-title Service
                            ul.page-footer__menu-list 
                                li.page-footer__menu-item 
                                    a.page-footer__menu-link(href="#")  About us
                                li.page-footer__menu-item 
                                    a.page-footer__menu-link(href="#") Careers
                                li.page-footer__menu-item 
                                    a.page-footer__menu-link(href="#") Terms & Conditions
                                li.page-footer__menu-item 
                                    a.page-footer__menu-link(href="#") Privacy & Policy
                        .page-footer__menu 
                            h3.page-footer__column-title Community
                            ul.page-footer__menu-list 
                                li.page-footer__menu-item 
                                    a.page-footer__menu-link Find agents
                                li.page-footer__menu-item 
                                    a.page-footer__menu-link Lifestyle
                                li.page-footer__menu-item 
                                    a.page-footer__menu-link Legal notice
                    .page-footer__social 
                        h3.page-footer__column-title Follow us on
                        .page-footer__social-links  
                            a.page-footer__social-link.page-footer__social-link--instagram(href="#") 
                            a.page-footer__social-link.page-footer__social-link--youtube(href="#") 
                            a.page-footer__social-link.page-footer__social-link--facebook(href="#")